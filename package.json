{
  "name": "myresume",
  "version": "1.0.1",
  "private": true,
  "description": "个人线上终端简历，支持PDF生成和动态展示",
  "homepage": "https://dushenyan-resume.netlify.app/",
  "repository": "https://github.com/dushenyan/myresume",
  "module": "commonjs",
  "iconUrl": "https://cdn.jsdelivr.net/npm/simple-icons@v10/icons/readthedocs.svg",
  "scripts": {
    "start": "grunt serve",
    "dev": "grunt dev",
    "serve": "grunt serve",
    "build": "grunt build",
    "build:quick": "grunt build:quick",
    "build:html": "grunt build:html",
    "build:pdf": "grunt build:pdf",
    "build:release": "grunt build:release",
    "build-pdf": "grunt build:pdf",
    "clean": "grunt clean",
    "compile": "grunt less:development",
    "compile:prod": "grunt less:production",
    "watch": "grunt watch",
    "lint": "grunt lint",
    "lint:fix": "grunt lint:fix",
    "typecheck": "tsc --noEmit",
    "preview": "npm run build && open dist/index.html",
    "deploy": "npm run build:release && echo '准备部署文件到 dist/resume-*.zip'",
    "install:deps": "npm install && grunt --version",
    "test:build": "npm run clean && npm run build && ls -la dist/"
  },
  "dependencies": {
    "esno": "^4.8.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.3.0",
    "@types/fs-extra": "^11.0.4",
    "@types/handlebars": "^4.1.0",
    "@types/node": "^24.10.1",
    "@types/underscore": "^1.13.0",
    "axios": "^0.27.2",
    "concurrently": "^7.6.0",
    "eslint": "^9.39.1",
    "fs-extra": "^10.1.0",
    "gravatar": "^1.8.2",
    "grunt": "^1.6.1",
    "grunt-cli": "^1.5.0",
    "grunt-concurrent": "^3.0.0",
    "grunt-contrib-clean": "^2.0.1",
    "grunt-contrib-compress": "^2.0.0",
    "grunt-contrib-less": "^3.0.0",
    "grunt-contrib-watch": "^1.1.0",
    "grunt-exec": "^3.0.0",
    "handlebars": "^4.7.8",
    "less": "^4.4.2",
    "load-grunt-tasks": "^5.1.0",
    "moment": "^2.30.1",
    "optimist": "^0.6.1",
    "puppeteer": "^15.5.0",
    "resume-schema": "1.0.0",
    "typescript": "^5.9.3",
    "underscore": "^1.13.7",
    "underscore.string": "^3.3.6"
  }
}
